<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nerdery.solson" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.nerdery.solson.NerdditApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Nerddit" >
        <activity
            android:name="com.nerdery.solson.activity.HotLinksActivity"
            android:label="@string/title_activity_nerddit" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nerdery.solson.activity.LinkDetailActivity"
            android:label="@string/title_activity_link_detail"
            android:parentActivityName="com.nerdery.solson.activity.HotLinksActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nerdery.solson.activity.HotLinksActivity" />
        </activity>
        <activity
            android:name="com.nerdery.solson.activity.CommentsActivity"
            android:label="@string/title_activity_comments"
            android:parentActivityName="com.nerdery.solson.activity.LinkDetailActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nerdery.solson.activity.LinkDetailActivity" />
        </activity>
    </application>

</manifest>
