<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nerdery.solson.activity.HotLinksActivity">

    <fragment android:id="@+id/fragment_link_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:name="com.nerdery.solson.fragment.LinkListFragment"
        tools:layout="@layout/fragment_link_list"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="5"
                  android:orientation="vertical">

        <ScrollView
                android:id="@+id/activity_detail_twopane_layout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <FrameLayout
                    android:id="@+id/frame_link_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFDF3"/>
        </ScrollView>

        <FrameLayout
                android:id="@+id/frame_link_comments"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="#E5E4DA"
                tools:ignore="MergeRootFrame"/>

    </LinearLayout>

</LinearLayout>
