<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/link_detail"
              tools:context=".LinkDetailFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="5dp"
              android:padding="5dp">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <ImageView
                android:id="@+id/list_item_link_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"/>

        <TextView
                android:id="@+id/list_item_link_score"
                style="@style/LinkScoreLeft"/>

        <TextView
                android:id="@+id/list_item_link_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/list_item_link_posted_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/list_item_link_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"/>

        <TextView
                android:id="@+id/list_item_link_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button android:id="@+id/fragment_details_view_comments_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_view_comments_title"
                android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</ScrollView>